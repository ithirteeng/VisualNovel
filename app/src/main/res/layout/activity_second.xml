<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSecond"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SecondActivity" >

    <ImageView
        android:id="@+id/secondScreenBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/content_description"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/entry_with_kiryusha" />

    <TextView
        android:id="@+id/secondScreenHeader"
        style="@style/screensHeaderStyle"
        android:layout_marginTop="100dp"
        android:text="@string/second_screen_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nicknameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center|start"
        android:hint="@string/second_screen_text"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/edit_text_padding_start"
        android:paddingTop="@dimen/edit_text_bottom_padding"
        android:paddingEnd="@dimen/edit_text_padding_start"
        android:paddingBottom="@dimen/edit_text_bottom_padding"
        android:textSize="@dimen/main_text_size"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondScreenHeader"
        app:layout_constraintVertical_bias="0.299" />

    <Button
        android:id="@+id/secondScreenButton"
        style="@style/screensHeaderStyle"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:text="@string/second_screen_button_text"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nicknameEditText"
        app:layout_constraintVertical_bias="0.508" />

</androidx.constraintlayout.widget.ConstraintLayout>
