<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="firstAndLastHeaderStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:background">@color/firstMainColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">150dp</item>
        <item name="android:fontFamily">@font/quattrocento_sans</item>
    </style>

    <style name="screensHeaderStyle">
        <item name="android:background">@color/secondMainColor</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_top_and_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top_and_bottom</item>
        <item name="android:paddingStart">@dimen/padding_start_and_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_and_end</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="screensButtonsStyle">
        <item name="android:background">@color/firstMainColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_top_and_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top_and_bottom</item>
        <item name="android:paddingStart">@dimen/padding_start_and_end</item>
        <item name="android:paddingEnd">@dimen/padding_start_and_end</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>